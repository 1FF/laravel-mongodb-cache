root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
max_line_length = 120

[*.php]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[{*.html,*.less,*.sass,*.css,*.js,*.json}]
indent_size = 2

[*.{xml,yml,yaml}]
indent_size = 2

[composer.json]
indent_size = 4
